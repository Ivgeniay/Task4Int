@model UserManagement.Web.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="main-card">
    <h2 class="text-center mb-4 fw-bold">Sign Up</h2>

    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label text-muted">Name</label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0">
                    <i class="bi bi-person text-muted"></i>
                </span>
                <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="Enter your name" />
            </div>
            <div class="validation-container">
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label text-muted">Email</label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0">
                    <i class="bi bi-envelope text-muted"></i>
                </span>
                <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="Enter your email" />
            </div>
            <div class="validation-container">
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label text-muted">Password</label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0">
                    <i class="bi bi-lock text-muted"></i>
                </span>
                <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="Enter your password" />
            </div>
            <div class="validation-container">
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
        </div>

        <div class="d-grid gap-2 mb-4">
            <button type="submit" class="gradient-btn">SIGN UP</button>
        </div>

        <div class="text-center">
            <p class="text-muted">
                Already have an account?
                <a asp-action="Login" class="text-decoration-none fw-bold">Sign In</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}